/* pages/member/member/member.wxss */

page {
  background-color: #F4F5F6
}

.head-user {
  width: 100%;
  height: 320rpx;
  background-size: 100% 100%;
}

.head-user-button {
  margin: 0 250rpx 0 250rpx;
  padding: 80rpx 0 0 0 ;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head-user-icon {
  width: 112rpx;
  height: 112rpx;
}

.head-user-name {
  color: #fff;
  font-size: 36;
  padding-top: 24rpx;
}

.order {
  margin: 32rpx 0 0 0;
  width: 100%;
  height: 320rpx;
  background-color: #fff;
}

.order-head {
  width: 100%;
  height: 102rpx;
  border-bottom: 1rpx solid #F3F3F3;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.order-list {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.order-list-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.function-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 32rpx 0 0 0;
  background-color: #fff;
  border-top: 1rpx solid #F3F3F3;
  position: relative;
}

.function-list-item {
  width: 250rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #F3F3F3;
}

.function-list-line {
  height: 500rpx;
  background-color: #F3F3F3;
  position: absolute;
  width: 1rpx;
  top: 0;
}

