page {
  background-color: #F4F5F6
}

.header {
  background-image: url('https://dcdn.it120.cc/2020/03/13/885fbe00-987d-4a1d-a568-55330bab8337.png');
  width: 100%;
  height: 313rpx;
  display: flex;
  flex-direction: column;
