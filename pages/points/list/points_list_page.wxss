  justify-content: center;
}

.score-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx 20rpx 30rpx;
  border-bottom: 1rpx solid #F3F3F3;
}

.score-item-left {
  width: 450;
  display: flex;
  flex-direction: column;
}