/* pages/home/home/home.wxss */

page {
  background-color: #F2F1F1;
}

.swiper-item-view {
  width: 100%;
  background: blanchedalmond
}

.swiper-item-view-image {
  width: 100%;
  /* background: blanchedalmond */
}

.sale-view {
  height: 200rpx;
  flex-direction: row;
  display: flex;
  margin: 10px 0;
  background-color: #ffffff;
  justify-content: space-around;
}

.sale-item-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sale-item-view-image {
  width: 92rpx;
  height: 92rpx;
  padding: 30rpx 0 15rpx 0;
}

.hot-view {
  flex-direction: row;
  display: flex;
  background-color: #ffffff;
  justify-content: space-between;
  flex-wrap: wrap;
}

.hot-item-view {
  width: 50%;
  height: 280rpx;
}

.recomend-head {
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.recomend-head-line {
  width: 50rpx;
  height: 4rpx;
  background-color: #B4282D;
}

.recomend-list {
  width: auto;
  background-color: #fff;
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between
}

.recomend-list-item {
  width: 330rpx;
  height: 550rpx;
}

.recomend-list-item-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  /* align-content: center; */
}

.recomend-list-item-characteristic {
  margin: 10rpx 0;
  color: #D0D0D0;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.recomend-list-item-price {
  /* margin: 10rpx 0; */
  color: #B4282D;
  font-size: 36rpx;
}

